page{
  height: 100vh;
}

.top{
  background-color: #F1F1F1;
  position: fixed;
  top: 0;
  z-index: 10000;
}

.totalInfor{
  border-radius: 18rpx;
  font-family: Arial, Helvetica, sans-serif;
  background-color: white;
  text-align: center;
  color: #FE8516;
  margin: 25rpx;
  margin-bottom: 20rpx;
  height: 92rpx;
  width: 700rpx;
  line-height: 92rpx;
  border-top: solid 5rpx #FFAE13;
  box-shadow: 0rpx 0rpx 10rpx 2rpx rgba(201, 201, 201, 1);
}

.chosenNum{
  margin-left: 40rpx;
}

.scroll{
  margin-bottom: 40rpx;
  margin-top: 125rpx;
  height: 100vh;
}

.card{
  background-color: white;
  width: 700rpx;
  border-radius: 12px;
  box-shadow: 0px 0px 5px 0px rgba(201, 201, 201, 1);
  border: 1px solid rgba(255, 255, 255, 0);
  position: relative;
  margin-left: 25rpx;
  margin-top: 25rpx;
  display: flex;
  flex-direction: row;
}

.content{
  margin: 35rpx;
}

.name{
  font-size: 35rpx;
  font-family: Arial, Helvetica, sans-serif;
  color: #2E2E2E;
}

.line{
  height: 10rpx;
  width: 230rpx;
  border-bottom: 2rpx solid #FFA800;
  margin-bottom: 10rpx;
}

.info{
  color: #7F7F7F;
  font-size: 25rpx;
  line-height: 50rpx;
}

.gou{
  position: absolute;
  right: 40rpx;
  top: 30rpx;
  height: 40rpx;
  width: 50rpx;
}

.btn{
  background-color: #FFAE13 ;
  color: white;
  font-size: 28rpx;
  text-align: center;
  height: 72rpx;
  width: 210rpx;
  line-height: 72rpx;
  position: absolute;
  border-radius: 18rpx;
  bottom: 44rpx;
  right: 25rpx;
}

.bottom{
  text-align: center;
  color: #7F7F7F;
  font-size: 24rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin-top: 30rpx;
}

.bottom{
  text-align: center;
  font-size: 24rpx;
  color: #B8B8B8;
  margin: 25rpx;
}